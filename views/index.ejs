
<!--HERO-->
<section class="container-fluid">
    <div class="row d-flex flex-md-row-reverse align-items-center g-5 py-4 mb-4">

        <div class="col-12 col-md-6">
            <img class="d-block img img-fluid mx-md-auto rounded-5" src="/img/hero.png" alt="Hero image">
        </div>
        <div class="col-12 col-md-6">
            <h1 class="display-5 fw-bold mb-3">
                Huge selection of delicious recipe ideas
            </h1>
            <p class="lead py-2">Explore our huge selection of delicious recipe ideas including; easy desserts, delicious vegan and vegetarian dinner ideas, 
                gorgeous pasta recipes, quick bakes, family-friendly meals and gluten-free recipes.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a href="/explorelatest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2"> Explore Latest</a>
                    <a href="/recipe" class="btn btn-outline-secondary btn-lg px-4 me-md-2"> Show Random</a>
                </div>
        </div>
    </div>
</section>

<!--CATEGORIES-->
<div class="container d-flex mb-2">
    <h2 class="h2">
        Recipe Categories
    </h2>
</div>

<section class="row row-cols-2 row-cols-md-6 g-2 g-md-3 py-4 ">

    <% if(categories != '' ){ %>
        <% categories.forEach(function(category, index) { %>
            <a href="/category/<%- category._id %>" class="col text-center category-link d-block text-decoration-none  ">
                <div class="category-img shadow d-flex justify-content-center align-items-center mb-3 rounded-4 "><img src="/img/<%-category.image %>" alt="<%- category.name %>"></div>
                <div class="pt-1"><%- category.name %></div>
            </a>
        <% }) %>
    <% } %>

<!--Fix content VIEW ALL-->
    <a href="/categories" class="col text-center category-link d-block text-decoration-none">
        <div class="category-img shadow d-flex justify-content-center align-items-center mb-3 rounded-4"><img src="/img/all-cat.jpg" alt="View-all"></div>
        <div class="pt-1">View All</div>
    </a>


</section>

<!--LATEST-->
<section class="py-4">
    <div class="container d-flex mb-2 align-items-center">
        <h2 class="h2">
            Latest Recipes
        </h2>
        <a href="/explorelatest" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-md-4 g-2 g-md-3">

        <% if(food != '' ){ %>
            <% food.latest.forEach(function(recipe, index) { %>    
                <a href="/recipe/<%- recipe._id %>" class="col text-center category-link d-block text-decoration-none">
                    <div class="category-img-lg shadow d-flex justify-content-center align-items-center mb-3 rounded-4"><img src="/img/<%-recipe.image %>" alt="<%- recipe.name %>"></div>
                    <div class="pt-1"><%- recipe.name %></div>
                </a>
            <% }) %>
        <% } %>
    </div>
</section>

