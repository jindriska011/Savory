<h1 class="display-3 text-center">Recipes from this Category</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Category</a></li>
    

<% if(selected != '' ){ %>

    <li class="breadcrumb-item " aria-current="page"><%- selected[0].category%></li>
    </ol>
</nav>

<section class="row row-cols-2 row-cols-md-4 g-2 g-md-3">

    <% selected.forEach(function(recipe, index) { %>    
        <a href="/recipe/<%- recipe._id %>" class="col text-center category-link d-block text-decoration-none">
            <div class="category-img-lg shadow d-flex justify-content-center align-items-center mb-3 rounded-4"><img src="/img/<%-recipe.image %>" alt="View-all"></div>
            <div class="pt-1"><%- recipe.name %></div>
        </a>
    <% }) %>
<% } %>

</section>

